<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".Profile">

      <RelativeLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:padding="16dp">

      <ImageView
          android:id="@+id/profile_image"
          android:layout_width="150dp"
          android:layout_height="150dp"
          android:layout_alignParentStart="true"
          android:layout_alignParentTop="true"
          android:layout_marginEnd="16dp"
          android:layout_marginTop="30dp"
          />

            <Button
                android:layout_marginTop="30dp"
                android:id="@+id/share"
                android:layout_width="210dp"
                android:layout_height="wrap_content"
                android:text="Share\n Information"
                android:layout_toRightOf="@id/profile_image"/>

            <Button
                android:id="@+id/upload_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Upload new Profile Picture"
                android:layout_toRightOf="@id/profile_image"
                android:layout_below="@id/share"/>
            <TextView
                android:id="@+id/name_subheader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:layout_below="@id/profile_image"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="16dp"/>

         <TextView
          android:id="@+id/profile_name"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@id/name_subheader"
          android:layout_marginTop="20dp"
          android:textSize="24sp" />

            <TextView
                android:id="@+id/email_subheader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:layout_below="@id/profile_name"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="16dp"/>

            <TextView
          android:id="@+id/profile_email"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center_horizontal"
          android:textAlignment="center"
          android:layout_marginTop="10dp"
          android:textSize="16sp"
                android:layout_below="@id/email_subheader"/>
            <TextView
                android:id="@+id/address_subheader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address"
                android:layout_below="@id/profile_email"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="16dp"/>
      <TextView
          android:id="@+id/profile_address"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center_horizontal"
          android:textAlignment="center"
          android:layout_below="@id/address_subheader"
          android:layout_marginTop="10dp"
          android:textSize="16sp" />
            <TextView
                android:id="@+id/phone_subheader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone Number"
                android:layout_below="@id/profile_address"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="16dp"/>
      <TextView
          android:id="@+id/profile_phone"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center_horizontal"
          android:layout_below="@id/phone_subheader"
          android:textAlignment="center"
          android:layout_marginTop="10dp"
          android:textSize="16sp" />

      <TextView
          android:id="@+id/dob_subheader"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@id/profile_phone"
          android:text="Date of Birth (DoB)"
          android:textSize="18sp"
          android:textStyle="bold"
          android:layout_marginTop="16dp"/>

      <TextView
          android:id="@+id/dob_text"
          android:layout_below="@id/dob_subheader"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textSize="16sp"
          android:layout_marginTop="8dp"/>

      <TextView
          android:id="@+id/blood_type_subheader"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Blood Type"
          android:layout_below="@id/dob_text"
          android:textSize="18sp"
          android:textStyle="bold"
          android:layout_marginTop="16dp"/>

      <TextView
          android:id="@+id/blood_type_text"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@id/blood_type_subheader"
          android:textSize="16sp"
          android:layout_marginTop="8dp"/>

      <TextView
          android:id="@+id/allergies_subheader"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@id/blood_type_text"
          android:text="Allergies and Sensitivities"
          android:textSize="18sp"
          android:textStyle="bold"
          android:layout_marginTop="16dp"/>

      <TextView
          android:id="@+id/allergies_text"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@id/allergies_subheader"
          android:textSize="16sp"
          android:layout_marginTop="8dp"/>

      <TextView
          android:id="@+id/current_medications_subheader"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@id/allergies_text"
          android:text="Current Medications and Dosages"
          android:textSize="18sp"
          android:textStyle="bold"
          android:layout_marginTop="16dp"/>

      <TextView
          android:id="@+id/current_medications_text"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@id/current_medications_subheader"
          android:textSize="16sp"
          android:layout_marginTop="8dp"/>

      <TextView
          android:id="@+id/chronic_medical_conditions_subheader"
          android:layout_width="wrap_content"
          android:layout_height = "wrap_content"
          android:layout_below="@id/current_medications_text"
          android:text="Chronic Medical Conditions"
          android:textSize="18sp"
          android:textStyle="bold"
          android:layout_marginTop="16dp"/>

      <TextView
          android:id="@+id/chronic_conditions_text"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textSize="16sp"
          android:layout_below="@id/chronic_medical_conditions_subheader"
          android:layout_marginTop="8dp"/>

      <TextView
          android:id="@+id/prev_surgeries_subheader"
          android:layout_width="wrap_content"
          android:layout_height = "wrap_content"
          android:text="Previous Surgeries and Medical Procedures"
          android:layout_below="@id/chronic_conditions_text"
          android:textSize="18sp"
          android:textStyle="bold"
          android:layout_marginTop="16dp"/>

      <TextView
          android:id="@+id/prev_surgeries_text"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@id/prev_surgeries_subheader"
          android:textSize="16sp"
          android:layout_marginTop="8dp"/>

      <TextView
          android:id="@+id/emergency_contact_subheader"
          android:layout_width="wrap_content"
          android:layout_height = "wrap_content"
          android:text="Emergency Contact Information"
          android:layout_below="@id/prev_surgeries_text"
          android:textSize="18sp"
          android:textStyle="bold"
          android:layout_marginTop="16dp"/>

      <TextView
          android:id="@+id/emergency_contact_text"
          android:layout_below="@id/emergency_contact_subheader"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textSize="16sp"
          android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/insurance_info_subheader"
        android:layout_width="wrap_content"
        android:layout_height = "wrap_content"
        android:layout_below="@id/emergency_contact_text"
        android:text="Insurance Information"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/insurance_info_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/insurance_info_subheader"
        android:textSize="16sp"
        android:layout_marginTop="8dp"/>

      <Button
          android:id="@+id/edit_button"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center_horizontal"
          android:layout_below="@id/insurance_info_text"
          android:layout_marginTop="30dp"
          android:text="Update Personal Details"
          />
      </RelativeLayout>
</ScrollView>



