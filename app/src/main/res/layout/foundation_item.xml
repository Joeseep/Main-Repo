<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="10dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/foundation_item">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/foundation_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="10dp"
            android:scaleType="centerCrop"
            android:padding="8dp" />

        <TextView
            android:id="@+id/foundation_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@id/foundation_image"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/foundation_goal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@id/foundation_image"
            android:textSize="14sp"
            android:layout_below="@id/foundation_name"/>
        <TextView
            android:id="@+id/foundation_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@id/foundation_image"
            android:textSize="14sp"
            android:maxLines="0"/>

        <TextView
            android:id="@+id/foundation_contact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@id/foundation_image"
            android:textSize="12sp"
            android:maxLines="0"/>

        <TextView
            android:id="@+id/foundation_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@id/foundation_image"
            android:textSize="12sp"
            android:maxLines="0"/>

        <TextView
            android:id="@+id/foundation_website"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@id/foundation_image"
            android:textSize="12sp"
            android:maxLines="0"/>


    </RelativeLayout>

</androidx.cardview.widget.CardView>
